<div id="sidebar-wrapper" class="lm-wrapper">
  <ul class="sidebar-nav">
    <li class="sidebar-brand hvr-bounce-to-left">
      <%= link_to root_path do %>
        <%= image_tag "framgia2.png", class: "header-img" %>
      <% end %>
    </li>
    <li class="panel-group hvr-bounce-to-left">
      <%= link_to admin_root_path do %>
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        <span class="lm-text"><%= t :dash_board %></span>
      <% end %>
    </li>
    <li class="panel-group hvr-bounce-to-left">
      <a data-toggle="collapse" href="#user">
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        <%= t :user %>
      </a>
      <ul id="user" class="panel-collapse collapse">
        <li>
          <%= link_to t("navbar.user"), admin_users_path %>
        </li>
      </ul>
    </li>
    <li class="panel-group hvr-bounce-to-left">
      <a data-toggle="collapse" href="#category">
        <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
        <%= t "categories.category" %>
      </a>
      <ul id="category" class="panel-collapse collapse">
        <li>
          <%= link_to t("navbar.new_category"), new_admin_category_path %>
        </li>
        <li>
          <%= link_to t("navbar.index_category"), admin_categories_path %>
        </li>
      </ul>
    </li>
    <li class="panel-group hvr-bounce-to-left">
      <a data-toggle="collapse" href="#course">
        <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
        <%= t "navbar.word" %>
      </a>
      <ul id="course" class="panel-collapse collapse">
        <li>
          <%= link_to t("navbar.new_word"), new_admin_word_path %>
        </li>
        <li>
          <%= link_to t("navbar.index_word"), admin_words_path %>
        </li>
      </ul>
    </li>
    <li class="panel-group hvr-bounce-to-left">
      <a data-toggle="collapse" href="#account">
        <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
        <%= t :account %>
      </a>
      <ul id="account" class="panel-collapse collapse">
        <li>
          <%= link_to t("navbar.logout"), logout_path, method: :delete %>
        </li>
      </ul>
    </li>
  </ul>
</div>
